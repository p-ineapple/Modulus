<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/backgroup"
        android:paddingVertical="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="28sp"
            android:layout_height="28sp"
            android:src="@drawable/arrow_back"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Back"
            android:text="Back"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginHorizontal="5dp"
            android:layout_toEndOf="@id/backButton" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageMod"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/asd"
            android:adjustViewBounds="true">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/moduleDetailsPillar"
            android:text="Pillar"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/imageMod"
            app:layout_constraintWidth="match_parent"
            android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/moduleDetailsName"
            android:text="Module Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:maxLines="4"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="14dp"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintWidth="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/moduleDetailsPillar"
            />

        <TextView
            android:id="@+id/tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Tags"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="8dp"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@+id/moduleDetailsName"
            />


        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/underModuleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:dividerColor = "@color/black"
            app:layout_constraintTop_toBottomOf="@+id/tags"
            />

        <TextView
            android:id="@+id/moreInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Description"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="8dp"
            android:clickable="true"
            app:drawableRightCompat="@drawable/arrow_right"
            app:layout_constraintTop_toBottomOf="@+id/underModuleName"
            />


        <TextView
            android:id="@+id/termProf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Prfs"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="8dp"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@+id/moreInfo"
            />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/underInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:dividerColor = "@color/black"
            app:layout_constraintTop_toBottomOf="@+id/termProf"

            />

        <TextView
            android:id="@+id/prerequisites_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pre-requisites"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="8dp"
            app:layout_constraintTop_toBottomOf="@+id/underInfo"/>


        <TextView
            android:id="@+id/prerequisites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prerequisites_added"
            android:textSize="16sp"
            android:lineSpacingExtra="2dp"
            android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="8dp"
            app:layout_constraintTop_toBottomOf="@+id/prerequisites_title"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/underprereq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            app:dividerColor = "@color/black"
            app:layout_constraintTop_toBottomOf="@+id/prerequisites"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RatingBar
            android:id="@+id/ratingBar"
            android:numStars="5"
            android:stepSize="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/reviewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Overall course rating"
            android:textAlignment="center"
            android:layout_below="@id/ratingBar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/reviewText">

        <!-- Existing Reviews List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reviewRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addReviewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/baseline_add_24"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>