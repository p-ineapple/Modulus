<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/backgroup"
            android:paddingVertical="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/white">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:src="@drawable/arrow_back2"
                android:layout_centerVertical="true"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Back"
                android:text="Back"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginHorizontal="5dp"
                android:layout_toEndOf="@id/backButton" />

        </RelativeLayout>


        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageMod"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/asd"
                        android:adjustViewBounds="true">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/moduleDetailsPillar"
                        android:text="Pillar"
                        android:textSize="28dp"
                        android:textStyle="bold"
                        app:drawableRightCompat="@drawable/info"
                        app:layout_constraintTop_toBottomOf="@+id/imageMod"
                        app:layout_constraintWidth="match_parent"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginVertical="10dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/moduleDetailsName"
                        android:text="Module Name"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:maxLines="4"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="14dp"
                        app:layout_constraintVertical_bias="0.5"
                        app:layout_constraintWidth="match_parent"
                        app:layout_constraintTop_toBottomOf="@+id/moduleDetailsPillar"
                        />

                    <TextView
                        android:id="@+id/tags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Course Tags"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginVertical="8dp"
                        android:clickable="true"
                        app:layout_constraintTop_toBottomOf="@+id/moduleDetailsName"
                        />


                        <TextView
                            android:id="@+id/termlabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Term(s)"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="14dp"
                            android:layout_marginVertical="8dp"
                            android:clickable="true"
                            app:layout_constraintTop_toBottomOf="@+id/tags"
                            />

                        <TextView
                            android:id="@+id/terms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Terms"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="14dp"
                            android:layout_marginVertical="8dp"
                            android:clickable="true"
                            app:layout_constraintTop_toBottomOf="@+id/termlabel"
                            />

                        <TextView
                            android:id="@+id/termProflabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Course Instructors"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="14dp"
                            android:layout_marginVertical="8dp"
                            android:clickable="true"
                            app:layout_constraintTop_toBottomOf="@+id/terms"
                            />
                        <TextView
                            android:id="@+id/termProf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Course Instructors"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="14dp"
                            android:layout_marginVertical="8dp"
                            android:clickable="true"
                            app:layout_constraintTop_toBottomOf="@+id/termProflabel"
                            />



                        <TextView
                            android:id="@+id/prerequisites_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pre-requisites"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="14dp"
                            android:layout_marginVertical="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/termProf"/>


                        <TextView
                            android:id="@+id/prerequisites"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Prerequisites_added"
                            android:textSize="16dp"
                            android:lineSpacingExtra="2dp"
                            android:layout_marginHorizontal="14dp"
                            android:layout_marginVertical="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/prerequisites_title"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/overallText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Overall Course Rating"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/overallScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5.0"
                        android:textStyle="bold"
                        android:textSize="60sp"
                        android:textAlignment="center"
                        android:layout_below="@id/overallText"/>

                    <RatingBar
                        android:id="@+id/overallRating"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:layout_below="@id/overallScore"
                        android:layout_marginVertical="2dp"/>



                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginVertical="5dp"
                        android:id="@+id/reviewRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_below="@id/overallRating"/>


                    </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addReviewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_24"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"/>
</FrameLayout>

