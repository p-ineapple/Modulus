<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Modulus" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/light_purple</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/light_pink</item>
        <item name="colorOnSecondary">@color/dark_pink</item>
    </style>

    <style name="Theme.Modulus" parent="Base.Theme.Modulus" />

    <style name="Dialoganimation"> <!--might need to change this-->
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="Theme.Login" parent="Base.Theme.Modulus" />
    <style name="Theme.Login.BackgroundImageStyle">
        <item name="android:windowBackground">@drawable/lofi_crop</item>
    </style>


</resources>